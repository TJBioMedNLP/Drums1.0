	function unselectall(number){
            if(number == 1){
              for(i = 0; i < document.forms[0].method.length; i++){
                 document.forms[0].method[i].checked = false;
              }
            }
            if(number == 0){
              for(i = 0; i < document.forms[0].method.length; i++){
                 document.forms[0].method[i].checked = true;
              }
            }

         }

