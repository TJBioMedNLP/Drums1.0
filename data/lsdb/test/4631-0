<script type="text/javascript">
var contor=0
var s
function slideShow()
{
 if (contor%9==0){
   document.getElementById('slideshow').src = "slideshow-images-home/1.jpg";
 }
 if (contor%9==1){
   document.getElementById('slideshow').src = "slideshow-images-home/2.jpg";
 }
 if (contor%9==2){
   document.getElementById('slideshow').src = "slideshow-images-home/3.jpg";
 }
 if (contor%9==3){
   document.getElementById('slideshow').src = "slideshow-images-home/4.jpg";
 }
 if (contor%9==4){
   document.getElementById('slideshow').src = "slideshow-images-home/5.jpg";
 }
 if (contor%9==5){
   document.getElementById('slideshow').src = "slideshow-images-home/6.jpg";
 }
 if (contor%9==6){
   document.getElementById('slideshow').src = "slideshow-images-home/7.jpg";
 }
 if (contor%9==7){
   document.getElementById('slideshow').src = "slideshow-images-home/8.jpg";
 }
 if (contor%9==8){
   document.getElementById('slideshow').src = "slideshow-images-home/9.jpg";
 }
 contor+=1
 s=setTimeout("slideShow()",1500)
}
</script>
