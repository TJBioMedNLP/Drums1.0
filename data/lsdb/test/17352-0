<script type="text/javascript">

$('#batch-processing').click(function(event) {
  $('#the_image').cycle(3);
  $('#the_image').cycle('pause');
});

$('#graphical-user-interface').click(function(event) {
  $('#the_image').cycle(4);
  $('#the_image').cycle('pause');
});

$('#sequences').click(function(event) {
  $('#the_image').cycle(2);
  $('#the_image').cycle('pause');
});

$('#density').click(function(event) {
  $('#the_image').cycle(1);
  $('#the_image').cycle('pause');
});

$('#molecules').click(function(event) {
  $('#the_image').cycle(0);
  $('#the_image').cycle('pause');
});

$('#the_image').cycle('fade');
</script>

