function formatDate(date) {
    month = new Array("Jan", "Feb", "Mar", "Apr", "May", "Jun",
                      "Jul", "Aug", "Sep", "Oct", "Nov", "Dec");
    dd    = date.getDate();
    mmm   = month[date.getMonth()];
    yyyy  = date.getYear();

    // some browsers return only the last two digits of the year
    if (yyyy < 100)
        yyyy += 2000;
    else if (yyyy < 1000)
        yyyy += 1900;

    return dd + '-' + mmm + '-' + yyyy;
}

document.write(formatDate(new Date(document.lastModified)));

