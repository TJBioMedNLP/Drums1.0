   <!-- Hide script from older browsers

      function validForm(passForm)
      {
         if(passForm.total_seqs.value == "" )
         {    alert("How many closely related sequences?")        
            passForm.total_seqs.focus()
            return false
         } 
         if(passForm.total_seqs.value <= 1 )
         {    
            alert("You have to enter more that ONE related sequences?")        
            passForm.total_seqs.focus()
            return false
         } 
         if(isNaN(parseInt(passForm.total_seqs.value)))
         {
            alert("You have to enter a number to 'HOW MANY' text field!")     
            passForm.total_seqs.focus()
            return false
         }        
        
         return true
      }
      // End hiding script -->
   </SCRIPT>
